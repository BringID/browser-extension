{
  "manifest_version": 3,
  "name": "BringID",
  "description": "Verify your Internet activity and prove that youâ€™re a real human and not a bot.",
  "key": "",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    
  },
  "content_scripts": [
    {
      "matches": [
          "https://*.bringid.org/*",
          "http://localhost/*",
          "https://localhost/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": []
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://*.bringid.org/*",
      "https://localhost/*",
      "http://localhost/*",
      "wss://*/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-32.png",
        "content.bundle.js"
      ],
      "matches": [
        "https://*.bringid.org/*",
        "https://localhost/*",
        "http://localhost/*",
        "wss://*/*"
      ]
    }
  ],
  "optional_host_permissions": [
    "https://api.x.com/*",
    "https://x.com/*",
    "https://appleid.apple.com/*",
    "https://riders.uber.com/*",
    "https://account.apple.com/*"
  ],
  "host_permissions": [
    "https://*.bringid.org/*",
    "https://localhost/*",
    "http://localhost/*",
    "wss://*/*"
  ],
  "permissions": [
    "offscreen",
    "storage",
    "webRequest",
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs"
  ]
}
