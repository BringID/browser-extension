{
  "manifest_version": 3,
  "name": "BringID",
  "description": "Verify your Internet activity and prove that youâ€™re a real human and not a bot.",
  "key": "",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": "icon-32.png"
  },
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://connect.bringid.org/*",
        "https://dev.connect.bringid.org/*",
        "https://widget.bringid.org/*",
        "https://staging.widget.bringid.org/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": [],
      "all_frames": true
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://connect.bringid.org/*",
      "https://dev.connect.bringid.org/*",
      "https://widget.bringid.org/*",
      "https://staging.widget.bringid.org/*"
    ],
    "all_frames": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.bundle.js"
      ],
      "matches": [
        "https://connect.bringid.org/*",
        "https://dev.connect.bringid.org/*",
        "https://widget.bringid.org/*",
        "https://staging.widget.bringid.org/*"
      ],
      "all_frames": true
    }
  ],
  "optional_host_permissions": [
    "https://appleid.apple.com/*",
    "https://riders.uber.com/*",
    "https://account.apple.com/*",
    "https://www.binance.com/*",
    "https://www.okx.com/*",
    "https://speedysub.apps.apple.com/*",
    "https://apps.apple.com/*"
  ],
  "host_permissions": [
    "https://connect.bringid.org/*",
    "https://dev.connect.bringid.org/*",
    "https://widget.bringid.org/*",
    "https://staging.widget.bringid.org/*"
  ],
  "permissions": [
    "offscreen",
    "storage",
    "webRequest",
    "activeTab",
    "sidePanel"
  ]
}